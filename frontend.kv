<FirstScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            id: img
            size_hint_y: 0.8
            opacity: 0

        TextInput:
            id: user_query
            size_hint_y: 0.1

        Button:
            text: 'Search Image'
            size_hint_y: 0.1
            on_press: root.set_img()

<RootWidget>:
    canvas.before:
        Color:
            rgba: (.5,.5,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
    FirstScreen:
        id: first_screen
        name: 'first_screen'